<%- include("header") %> -%>

    <main>
        <div class="container">
            <div class="row">
                <h1><%= theTitle %></h1>
                <p><%= theDate %> </p>
            </div>
            <div class="row main">        
                <div class="toDoList">
                    <% todoList.forEach( (task) => { %>                    
                        <div class="list-item">
                            <input type="checkbox" class="doneCheck">
                            <p>
                                <%= task.task %>
                                <span class="due"><%= task.due %></span>
                            </p>
                        </div>
                    <% }) %>
                </div>
    
                <form method="post">
                    <label for="newTask">Nova tarefa</label><br>
                    <input name="newTask" type="text" id="newTask" autofocus>
                    <input name="taskDue" type="text">
                    <button type="submit">+</button>
                </form>
            </div>
        </div>
    </main>

<%- include("footer") %> -%>
